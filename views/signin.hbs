<div class="container mx-auto" style="max-width: 350px;">
  <div class="signin-content text-center" style="width: 100%;">
    <img class="mb-3" src="/stylesheets/icons/logo.svg" alt="logo" style="height: 50px; width: 50px">
    <h3 class="title mb-3">登入</h3>

    {{!-- Google signin --}}
    <div class="d-flex justify-content-center align-items-center mt-4" style="width: 100%">
      <hr style="width: 30%" />
      <span class="mx-2" style="font-size: 14px; color:gray">使用 Google 登入</span>
      <hr style="width: 30%" />
    </div>
    <a href="/auth/google" alt="google login">
      <img class="mt-3" src="/stylesheets/icons/google.svg" alt="logo" style="height: 35px; width: 35px">
    </a>

    {{!-- Local signin --}}
    <div class="d-flex justify-content-center align-items-center mt-4">
      <hr style="width: 30%" />
      <span class="mx-2" style="font-size: 14px; color:gray">使用 Email 登入</span>
      <hr style="width: 30%" />
    </div>
    <div class="d-flex mt-4">
      <form class="form-signin" style="width: 100%;" action="/signin" method="POST">
        <div class="form-row mb-3">
          <input class="form-control" id="email" type="text" name="email" class="form-control" placeholder="輸入 Email"
            autofocus>
        </div>
        <div class="form-row mb-3">
          <input class="form-control" id="password" type="password" name="password" class="form-control"
            placeholder="輸入密碼">
        </div>
        <button class="btn btn-primary btn-block mt-3" style="width: 100%;" type="submit">登入</button>
      </form>
    </div>

    {{!-- Signup --}}
    <div class="my-4 text-center">
      <p style="font-size: 16px;">還沒有帳號？<a href="/signup">註冊</a></p>
    </div>
  </div>
</div>