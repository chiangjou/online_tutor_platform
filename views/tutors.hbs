
<div class="row" id="search-bar">
  <div class="col-12">
    <form action="/tutors/search" method="GET">
      <div class="input-group mb-3">
        <input type="text" name="keyword" class="form-control" placeholder="搜尋老師名字" aria-label="keyword"
          aria-describedby="search-button" value="{{keyword}}">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="submit" id="search-button">搜尋</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row mt-3">
  {{#each data}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <a href="/tutors/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.User.avatar}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
      <div class="card-body">
        <p class="card-text">
          <a href="/tutors/{{this.id}}">
            {{this.User.name}}
          </a>
        </p>
        <p class="card-text">{{this.User.nation}}</p>
        <p class="card-text text-truncate">{{this.tutorIntroduction}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<div>
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      {{#each pagination.pages}}
      {{#ifCond this ../pagination.currentPage}}
      <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="/tutors?page={{this}}">{{this}}</a>
      </li>
      {{/ifCond}}
      {{/each}}
    </ul>
  </nav>
</div>