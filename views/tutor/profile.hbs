<div class="row mb-5">
  {{!-- 左側 --}}
  <div class="col-md-4">

    {{!-- 頭像 --}}
    <div class="tutor-avatar mb-5">
      {{#if user.avatar}}
      <img class="avatar" src="{{user.avatar}}" alt="avatar" title="avatar">
      {{else}}
      <img class="default-avatar" src="/stylesheets/icons/default-avatar.svg" alt="avatar" title="avatar">
      {{/if}}
    </div>

    {{!-- 老師資訊 --}}
    <div class="tutor-info mb-5">
      <h3>{{user.name}}</h3>
      <p>{{user.nation}}</p>
      <strong>關於我</strong>
      <p style="white-space: break-spaces;">{{user.Tutor.tutorIntroduction}}</p>
    </div>

    {{!-- 編輯按鈕 --}}
    <a class="custom-solid-button" href="/tutor/{{user.id}}/edit" style="text-decoration: none;">編輯課程資訊與時間</a>
  </div>

  {{!-- 右側 --}}
  <div class="col-md-8">
    {{!-- 最新課程 --}}
    <h4>即將到來</h4>
    <div class="row mb-5">
      {{#each futureCourses}}
      <div class="col-md-6 col-12" style="height: 100px; margin: 10px 0px">
        <div class="card mb-4 shadow-sm h-100" id="course-card">

          {{!-- 學生頭像 --}}
          <div class="d-flex align-items-center m-2">
            <div class="user-avatar mb-2">
              {{#if this.User.avatar}}
              <img class="avatar" src="{{this.User.avatar}}" alt="avatar" title="avatar">
              {{else}}
              <img class="default-avatar" src="/stylesheets/icons/default-avatar.svg" alt="avatar" title="avatar">
              {{/if}}
            </div>
          </div>

          <div class="course-info m-2">
            {{!-- 學生名字 --}}
            <span class="user-name">{{this.User.name}}</span>
            {{!-- 課程時間 --}}
            <span>{{this.time}}</span>
          </div>

          {{!-- 課程連結 --}}
          <div class="d-flex align-items-center mx-3">
            <a class="custom-solid-button " style="font-size: 15px; padding: 6px; color: white"
              href="{{this.Tutor.teachingLink}}">進入教室</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <hr>

    {{!-- 教學風格 --}}
    <div class="mb-5" id="teaching-style">
      <h4>教學風格</h4>
      <p>{{user.Tutor.teachingStyle}}</p>
    </div>
    <hr>

    {{!-- 學生評論 --}}
    <div id="recent-reviewed">
      <h4>最新評論</h4>
      <ul class="list-group">
        {{#each ratedCourses}}
        <li class="list-group-item"><strong class="badge bg-primary rounded-pill">{{this.rating}}</strong>
          {{#if this.comment}}{{this.comment}}{{else}}沒有留下評論{{/if}}</li>
        {{/each}}
      </ul>
    </div>

  </div>
</div>