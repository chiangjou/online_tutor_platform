{{#if success_messages}}
<div class='alert alert-success alert-dismissible msg-container' id="alert" role='alert'>
  <div class='msg'>
    {{success_messages}}
  </div>
  <div class='btn-container'>
    <button type='button' class='btn-success' data-bs-dismiss='alert' aria-label='Close'>
      <img src='/stylesheets/icons/message_success.svg' />
    </button>
  </div>
</div>
{{/if}}

{{#if error_messages}}
<div class='alert alert-danger alert-dismissible msg-container' id="alert" role='alert'>
  <div class='msg'>
    {{error_messages}}
  </div>
  <div class='btn-container'>
    <button type='button' class='btn-error' data-bs-dismiss='alert' aria-label='Close'>
      <img src='/stylesheets/icons/message_danger.svg' />
    </button>
  </div>
</div>
{{/if}}

{{#if errors}}
{{#each errors}}
<div class='alert alert-danger alert-dismissible msg-container' id="alert" role='alert'>
  <div class='msg'>
    {{this}}
  </div>
  <div class='btn-container'>
    <button type='button' class='btn-error' data-bs-dismiss='alert' aria-label='Close'>
      <img src='/stylesheets/icons/message_danger.svg' />
    </button>
  </div>
</div>
{{/each}}
{{/if}}

<script src="/javascripts/messages.js"></script>