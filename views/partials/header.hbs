<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light px-4">
    <div class="container-fluid">
      <div class="d-flex flex-direction-row justify-content-start align-items-center" style="width: 200px;">
        <a class="navbar-brand" href="/">
          <img src="/stylesheets/icons/logo.svg" alt="brand-logo" style="height: 40px; width: 40px">
          <strong class="m-2">Tutor</strong>
        </a>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse text-end" id="navbarCollapse">
        {{#if user}}
        {{!-- 管理員身份 --}}
        {{#if user.isAdmin}}
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a href="/admin" class="nav-link">使用者清單</a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="btn btn-outline-success my-sm-0 my-2">Logout</a>
          </li>
        </ul>
        {{!-- 老師身份 --}}
        {{else if user.isTutor}}
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a href="/tutor/{{ user.id }}" class="nav-link">{{ user.name }}</a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="btn btn-outline-success my-sm-0 my-2">Logout</a>
          </li>
        </ul>
        {{!-- 一般使用者身份 --}}
        {{else}}
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a href="/users/{{ user.id }}" class="nav-link">{{ user.name }}</a>
          </li>
          <li class="nav-item">
            <a href="/users/{{ user.id }}/apply" class="nav-link">成為老師</a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="btn btn-outline-success my-sm-0 my-2">Logout</a>
          </li>
        </ul>
        {{/if}}
        {{else}}
        {{!-- 未登入用戶 --}}
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item me-2">
            <a href="/login"><button class="btn btn-light m-2">登入</button></a>
          </li>
          <li class="nav-item me-2">
            <a href="/signup"><button class="btn btn-outline-secondary m-2">註冊</button></a>
          </li>
        </ul>
        {{/if}}
      </div>
    </div>
  </nav>
</header>